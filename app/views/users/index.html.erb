<div class="container">
<h3 class="logo"> Codezone
<span class="homeButton"> <%= link_to "New post", new_post_path %> </span>
</h3>

  <% @users.includes(:posts).each do |user| %>
  <a href="/users/<%=user.id %>">
  <div class="mt-2 p-1 bg-primary text-white rounded" >
    <div class="row"> 
      <div class="col-sm-3 userImage"> 
         <img width="135px" src=<%=user.photo %> alt=<%= user.name %> />
      </div>
      <div class="col-sm-9">
      <br>
      <br>
        <h3><%= user.name %> </h3> 
        <br>
        <div class="container commentsLikes">
          Total Posts: <b>(<%= user.posts_counter %>)</b>
        </div>
      </div>
      </div>
    </div>
    </a>
  <% end %>
</div>
